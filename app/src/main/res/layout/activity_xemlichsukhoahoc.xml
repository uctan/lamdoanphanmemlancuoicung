<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quanlyhoadonkhoahoc.xemlichsukhoahoc">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <RelativeLayout android:id="@+id/page_giohang_ek1"
            android:layout_marginTop="50dp"
            android:layout_width="450dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            >
            <TextView
                android:layout_width="256dp"
                android:layout_height="44dp"
                android:text="Thống kê"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_marginTop="2dp"
                android:textColor="#484F88"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="320dp"
                android:background="@drawable/close"
                android:id="@+id/closelichsukhoahoc"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="20dp"
            android:text="Thống kê khóa học"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="22sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewlichsukhoahoc"
            android:layout_width="500dp"
            android:layout_height="410dp"
            android:layout_marginTop="210dp"
            android:layout_marginStart="5dp"

            />


        <RelativeLayout
            android:id="@+id/totalkhoahocLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="660dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Tổng cộng"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalAmountkhoahoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="172dp"
                android:layout_marginBottom="16dp"
                android:text="0.0"
                android:textStyle="bold"
                android:textSize="20dp" />


        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>