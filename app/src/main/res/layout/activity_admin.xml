<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Admin">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/edit_1"
        />
    <TextView
        android:id="@+id/adminten"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:hint="Nguyễn Trần Duy Tân"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/adqlysanpham"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:text="Quản lý sản phẩm"
        />

    <Button
        android:id="@+id/adqlyhoadky"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="200dp"
        android:text="xem lịch sử đặt sân" />


    <Button
        android:id="@+id/adqlykhoahoc"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="300dp"
        android:text="xem lịch sử mua khóa học">

    </Button>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>